# Environment Configuration for CS2 Price Database
# Copy this file to .env and configure the values below

# Steam Market API Configuration
STEAM_MARKET_API_URL=https://steamcommunity.com/market/priceoverview/
STEAM_API_RATE_LIMIT=20
STEAM_API_RATE_WINDOW=60

# For UNLIMITED requests with proxies (recommended):
# STEAM_API_RATE_LIMIT=0
# STEAM_API_RATE_WINDOW=1

# Proxy Configuration
USE_PROXIES=true
# Optional: Comma-separated list of backup proxies (if GitHub source fails)
PROXY_LIST=
# Maximum concurrent requests when using proxies (enhanced: 100 concurrent, default: 100)
MAX_CONCURRENT_REQUESTS=100
# Enable proxy health checking on startup (slower but more accurate, default: false)
ENABLE_PROXY_HEALTH_CHECK=false

# Advanced Proxy Settings (optional)
PROXY_HEALTH_CHECK_INTERVAL=300
PROXY_MAX_FAILURES=3
PROXY_TEST_URL=https://httpbin.org/ip
PROXY_TIMEOUT=10